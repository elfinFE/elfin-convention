{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["dom", "esnext"],
        "rootDir": "src",
        "outDir": "dist",
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "stripInternal": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "newLine": "LF"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"]
}
